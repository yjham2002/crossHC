<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    tools:context="kr.co.picklecode.crossmedia.hiddencatch.PregameActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_height="180dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/result_anim"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/result_img"
                android:src="@drawable/img_result_clear"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/img_nexttime"
                android:layout_gravity="bottom"
                android:src="@drawable/img_result_nexttime"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <LinearLayout
                android:id="@+id/result_anim_p"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progress_01"
                        android:src="@drawable/img_reward_empty"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <ImageView
                        android:id="@+id/progress_sp_1"
                        android:src="@drawable/img_reward_seperator"
                        android:layout_width="30dp"
                        android:scaleType="fitXY"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/progress_02"
                        android:src="@drawable/img_reward_empty"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <ImageView
                        android:id="@+id/progress_sp_2"
                        android:src="@drawable/img_reward_seperator"
                        android:layout_width="30dp"
                        android:scaleType="fitXY"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/progress_03"
                        android:src="@drawable/img_reward_empty"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="Clear"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/r_heart_t"
                        android:textSize="15dp"
                        android:textColor="@color/divgray"
                        android:text="Heart"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/r_hint_t"
                        android:textSize="15dp"
                        android:textColor="@color/divgray"
                        android:text="Hint"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reward_center"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:src="@drawable/img_result_search"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:textSize="30dp"
                    android:textColor="@color/resultColor"
                    android:text="X"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/reward_text"
                    android:textSize="45dp"
                    android:textColor="@color/resultColor"
                    android:text="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:paddingBottom="20dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="left|center_vertical"
                android:id="@+id/r_exit"
                android:clickable="true"
                android:layout_weight="1"
                android:src="@drawable/btn_result_home"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/r_replay"
                android:clickable="true"
                android:layout_weight="1"
                android:src="@drawable/btn_result_replay"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageView
                android:layout_gravity="right|center_vertical"
                android:id="@+id/r_next"
                android:clickable="true"
                android:layout_weight="1"
                android:src="@drawable/btn_result_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/reward_bottom"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/btn_result_reward_normal"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/icon_hour_glass"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:visibility="gone"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="X"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/reward_text_b"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/chText"
        android:textSize="20dp"
        android:textColor="@color/chColor"
        android:text="Challenge Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
